@{
    ViewBag.Section = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dashboard</h1>

<style>


.card{
    position:relative;
    padding:1.6rem;
    background:#fff;
    border-radius:8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    transition: transform .2s, box-shadow .2s;
    text-decoration:none;          /* pour les <a> */
    color:inherit;
    border: 1px solid #e5e7eb;
    }
.card:hover:not(.disabled){
    transform:translateY(-4px);
    box-shadow:0 4px 12px rgba(0,0,0,.12);
}

    .card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        border: 1px solid #e5e7eb;
    }
/* Carte désactivée */
.card.disabled{
    opacity:0.55;
    pointer-events:none;           /* bloque le clic */
    cursor:not-allowed;
}

/* Badge “En développement” */
.badge{
    position:absolute;
    top:12px; right:12px;
    background:#ff9800;
    color:#fff;
    font-size:.75rem;
    padding:2px 8px;
    border-radius:12px;
    font-weight:600;
}

</style>

