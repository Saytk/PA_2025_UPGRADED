@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var pageTitle = ViewBag.Section as string ?? "Quantia";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@pageTitle - Quantia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9fafb;
        }

        .container {
            display: flex;
        }

        .main {
            padding: 40px;
            flex-grow: 1;
            position: relative;
        }

            .main h1 {
                font-size: 26px;
                margin-bottom: 30px;
            }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
        }

        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border: 1px solid #e5e7eb;
        }

            .card h3 {
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 18px;
            }

            .card p {
                margin: 0;
                color: #6b7280;
            }

        .no-style {
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>
    <div class="container">
        @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

        <div class="main">
            @Html.Partial("~/Views/Shared/_UserIcon.cshtml")
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
