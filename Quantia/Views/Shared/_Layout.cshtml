@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var pageTitle = ViewBag.Section as string ?? "Quantia";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@pageTitle - Quantia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9fafb;
        }

        .container {
            display: flex;
        }

        .main {
            padding: 40px;
            flex-grow: 1;
            position: relative;
        }

            .main h1 {
                font-size: 26px;
                margin-bottom: 30px;
            }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
        }

        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border: 1px solid #e5e7eb;
        }

            .card h3 {
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 18px;
            }

            .card p {
                margin: 0;
                color: #6b7280;
            }

        .no-style {
            text-decoration: none;
            color: black;
        }

        .card2 {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0,0,0,.05);
            padding: 32px;
            margin-top: 40px;
            max-width: 700px;
        }
        /* ——— Formulaire ——— */
        .form-label {
            font-weight: 600;
            margin-bottom: 6px;
            color: #374151;
        }

        .form-control, select {
            width: 90%;
            padding: 10px 14px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 14px;
            color: #111827;
            background: #fff;
            transition: border .2s;
            margin-bottom: 20px;
        }

            .form-control:focus, select:focus {
                outline: none;
                border-color: #2563eb;
                box-shadow: 0 0 0 2px rgba(37,99,235,.2);
            }

        .text-danger {
            color: #dc2626;
            font-size: 13px;
        }

        /* ——— Bouton primaire ——— */
        .btn-primary {
            background: #2563eb;
            color: #fff;
            border: none;
            padding: 10px 24px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: background .2s;
        }

            .btn-primary:hover {
                background: #1e40af;
            }
    </style>

</head>
<body>
    <div class="container">
        @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

        <div class="main">
            @Html.Partial("~/Views/Shared/_UserIcon.cshtml")
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
