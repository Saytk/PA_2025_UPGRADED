@{
    var initial = User.Identity.IsAuthenticated
        ? User.Identity.Name?.Substring(0, 1).ToUpper()
        : "?";
}

<style>
    .user-menu {
        position: absolute;
        top: 20px;
        right: 30px;
    }

    .user-circle {
        background-color: #2563eb;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        cursor: pointer;
    }

    .dropdown-menu {
        position: absolute;
        top: 50px;
        right: 0;
        background-color: white;
        border: 1px solid #e5e7eb;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 8px;
        width: 150px;
        display: none;
        z-index: 999;
    }

        .dropdown-menu a,
        .dropdown-menu button {
            display: block;
            width: 100%;
            padding: 10px 15px;
            text-align: left;
            border: none;
            background: none;
            font-size: 14px;
            cursor: pointer;
            color: #374151;
            text-decoration: none;
        }

            .dropdown-menu a:hover,
            .dropdown-menu button:hover {
                background-color: #f3f4f6;
            }
</style>

<div class="user-menu">
    <div class="user-circle" onclick="toggleDropdown()">@initial</div>

    <div class="dropdown-menu" id="userDropdown">
        <a href="@Url.Action("Index", "Settings")">Settings</a>
        <a href="@Url.Action("Login", "Account")">Logout</a>

    </div>
</div>

    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        document.addEventListener('click', function (e) {
            const dropdown = document.getElementById('userDropdown');
            const circle = document.querySelector('.user-circle');

            if (!dropdown.contains(e.target) && !circle.contains(e.target)) {
                dropdown.style.display = 'none';
            }
        });
    </script>

