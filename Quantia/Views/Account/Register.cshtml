@model Quantia.Models.UserModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register - Quantia</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9fafb;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-box {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            width: 300px;
        }

        h1 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            color: #6b7280;
            margin-bottom: 30px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            background-color: #2563eb;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #1d4ed8;
            }

        .link {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
        }

            .link a {
                color: #2563eb;
                text-decoration: none;
            }

                .link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: #dc2626;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="register-box">
        <h1>Quantia</h1>
        <p>Create your account</p>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="FirstName" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <input asp-for="LastName" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>

            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="Password" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn">Sign Up</button>
        </form>

        <div class="link">
            Already have an account? <a href="/Account/Login">Log in</a>
        </div>
    </div>
</body>
</html>
